<h1>Review Sites</h1>

<div class="row" data-equalizer>
  <% @sites.each do |site| %>
  <div class="large-6 columns panel" data-equalizer-watch>
    <h5><%= link_to site.title, site_path(site) %></h5>
  </div>
  <% end %>
</div>

<% unless params[:search] %>
  <%= paginate @sites %>
<% end %>

<% if current_user %>
  <%= link_to "Add a Site", new_site_path %>
<% end %>
